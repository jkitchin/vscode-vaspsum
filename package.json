{
  "name": "vasp-syntax",
  "displayName": "VASP Syntax Highlighting",
  "description": "Syntax highlighting and tooltips for VASP input/output files (INCAR, POSCAR, CONTCAR, KPOINTS, OUTCAR)",
  "version": "1.0.0",
  "license": "MIT",
  "publisher": "vasp-ase",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkitchin/vscode-vasp-syntax"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "vasp",
    "incar",
    "poscar",
    "contcar",
    "kpoints",
    "computational chemistry",
    "materials science",
    "dft"
  ],
  "activationEvents": [
    "onLanguage:incar",
    "onLanguage:poscar",
    "onLanguage:kpoints",
    "onLanguage:outcar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "incar",
        "aliases": [
          "INCAR",
          "incar"
        ],
        "filenames": [
          "INCAR",
          "INCAR.orig",
          "INCAR.bak"
        ],
        "extensions": [
          ".incar"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "poscar",
        "aliases": [
          "POSCAR",
          "poscar",
          "CONTCAR",
          "contcar"
        ],
        "filenames": [
          "POSCAR",
          "CONTCAR",
          "POSCAR.orig",
          "CONTCAR.orig"
        ],
        "extensions": [
          ".poscar",
          ".vasp"
        ],
        "configuration": "./poscar-language-configuration.json"
      },
      {
        "id": "kpoints",
        "aliases": [
          "KPOINTS",
          "kpoints"
        ],
        "filenames": [
          "KPOINTS",
          "KPOINTS.orig"
        ],
        "extensions": [
          ".kpoints"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "outcar",
        "aliases": [
          "OUTCAR",
          "outcar"
        ],
        "filenames": [
          "OUTCAR",
          "OUTCAR.gz"
        ],
        "extensions": [
          ".outcar"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "incar",
        "scopeName": "source.incar",
        "path": "./syntaxes/incar.tmLanguage.json"
      },
      {
        "language": "poscar",
        "scopeName": "source.poscar",
        "path": "./syntaxes/poscar.tmLanguage.json"
      },
      {
        "language": "kpoints",
        "scopeName": "source.kpoints",
        "path": "./syntaxes/kpoints.tmLanguage.json"
      },
      {
        "language": "outcar",
        "scopeName": "source.outcar",
        "path": "./syntaxes/outcar.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "invalid.deprecated.warning.block.outcar",
            "settings": {
              "foreground": "#FF0000",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "markup.bold.warning.outcar",
            "settings": {
              "foreground": "#FF0000",
              "fontStyle": "bold"
            }
          }
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
